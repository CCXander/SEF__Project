            <top>
                <Pane prefHeight="100.0" prefWidth="600.0" style="-fx-background-color: grey;" BorderPane.alignment="CENTER">
                    <children>
                        <Pane prefHeight="400.0" prefWidth="120.0" style="-fx-background-color: ff5555;" />
                        <Label layoutX="232.0" layoutY="25.0" text="Add Product">
                            <font>
                                <Font name="Sylfaen" size="40.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>
            </top>
            <center>
                <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button layoutX="148.0" layoutY="248.0" mnemonicParsing="false" onAction="#onBackButtonClick" prefHeight="25.0" prefWidth="60.0" text="Back">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                  <TextField fx:id="productName" layoutX="208.0" layoutY="42.0" />
                  <TextArea fx:id="productDescription" layoutX="208.0" layoutY="79.0" prefHeight="80.0" prefWidth="200.0" />
                  <Label layoutX="134.0" layoutY="46.0" text="Name:" />
                  <Label layoutX="134.0" layoutY="86.0" text="Description:" />
                  <Button layoutX="487.0" layoutY="248.0" mnemonicParsing="false" onAction="#onAddButtonClick" text="Add Product">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                  <TextField fx:id="productPrice" layoutX="208.0" layoutY="176.0" />
                  <Label layoutX="137.0" layoutY="180.0" text="Price:" />
                    </children>
                </Pane>
            </center>
            <bottom>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
