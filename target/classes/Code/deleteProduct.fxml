<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Code.Controllers.DeleteController">
    <children>
        <BorderPane prefHeight="400.0" prefWidth="600.0">
            <top>
                <Pane prefHeight="100.0" prefWidth="600.0" style="-fx-background-color: grey;" BorderPane.alignment="CENTER">
                    <children>
                        <Pane prefHeight="400.0" prefWidth="120.0" style="-fx-background-color: ff5555;" />
                        <Label layoutX="232.0" layoutY="25.0" text="Delete Product">
                            <font>
                                <Font name="Sylfaen" size="40.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>
            </top>
            <center>
                <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button layoutX="148.0" layoutY="248.0" mnemonicParsing="false" onAction="#onBackButtonClick" prefHeight="25.0" prefWidth="60.0" text="Back">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                  <Label layoutX="134.0" layoutY="51.0" text="Name of product to be deleted:" />
                  <TextField fx:id="deleteName" layoutX="312.0" layoutY="47.0" />
                  <Button layoutX="512.0" layoutY="248.0" mnemonicParsing="false" onAction="#onDeleteButtonClick" text="Delete">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                    </children>
                </Pane>
            </center>
            <bottom>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
